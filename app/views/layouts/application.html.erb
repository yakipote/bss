<!DOCTYPE html>
<html >
<head>
  <title>Bss</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body style="background-color:#66CCFF">
<% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="navbar navbar-inverse navbar-fixed-top navbar-default" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="/tweets">bss</a>
      </div>
      <div class="collapse navbar-collapse navbar-right" >
        <ul class="nav navbar-nav">
          <li class="active"><a href="/tweets">ホーム</a></li>
          <% if user_signed_in? %>
  			<!-- <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'navbar-link' %> |</li> -->
 			<li><%= link_to "ログアウト", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %></li>
      <li><%= link_to "友達を検索", "/friendSearch"  %></li>
			<% else %>
		  		<li><%= link_to "ユーザ登録", new_user_registration_path, :class => 'navbar-link'  %> |</li>
		  <li><%= link_to "ログイン", new_user_session_path, :class => 'navbar-link'  %></li>
		<% end %>
        </ul>
      </div><!--/.nav-collapse -->
    </div>
  </div>
  <div class="container" style="padding:100px; ">
  	

<div class="row">
  <div class="col-sm-3 panel panel-info">
    <div class="panel-body">
      <% if user_signed_in? %>
        <%= current_user.name %>としてログイン
      <%end%>
    </div>
  </div>
  <div class="col-sm-6 panel panel-info">
    <div class="panel-body">
    <%= yield %>
    </div>
  </div>
  <div class="col-sm-3">
    
  </div>

</div>


 </div><!-- /.container -->
</body>
</html>
